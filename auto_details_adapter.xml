<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/montserratsemibold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="12-12-2024"
                android:layout_marginVertical="10dp"
                android:id="@+id/dateTxt"
                android:textColor="@color/black"
                android:textSize="14sp"/>
            <TextView
                android:visibility="gone"
                android:fontFamily="@font/montserratsemibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Canceled"
                android:layout_marginVertical="10dp"
                android:id="@+id/canceledView"
                android:textColor="#FA0707"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginEnd="10dp"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/montserratsemibold"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="3:30 Pm"
                        android:id="@+id/startTime"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center_horizontal"
                        android:layout_width="10dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="3dp"
                            android:layout_height="0dp"
                            android:background="@color/white"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="10dp"
                            android:background="@drawable/dot_bg"
                            android:layout_height="10dp"/>
                        <View
                            android:layout_width="3dp"
                            android:layout_height="0dp"
                            android:background="@color/primary"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView
                        android:fontFamily="@font/montserratsemibold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="askjfc"
                        android:id="@+id/leavingFromTxt"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/montserratsemibold"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="3:30"
                        android:id="@+id/endTime"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                    <LinearLayout
                        android:layout_marginHorizontal="10dp"
                        android:gravity="center_horizontal"
                        android:layout_width="10dp"
                        android:orientation="vertical"
                        android:layout_height="match_parent">
                        <View
                            android:layout_width="3dp"
                            android:layout_height="0dp"
                            android:background="@color/primary"
                            android:layout_weight="1"/>
                        <ImageView
                            android:layout_width="10dp"
                            android:background="@drawable/dot_bg"
                            android:layout_height="10dp"/>
                        <View
                            android:layout_width="3dp"
                            android:layout_height="0dp"
                            android:background="@color/white"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginVertical="10dp"
                        android:fontFamily="@font/montserratsemibold"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="asc"
                        android:id="@+id/goingToTxt"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:fontFamily="@font/montserratsemibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹500"
                android:id="@+id/priceTxt"
                android:textColor="@color/black"
                android:textSize="18sp"/>
        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/white_bg"
            android:backgroundTint="#E3E3E3"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                app:cardCornerRadius="500dp"
                android:layout_height="50dp">
                <ImageView
                    android:background="@drawable/circular_bg"
                    android:id="@+id/autoDriverImage"
                    android:src="@drawable/example_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/autoDriverName"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vinay"
                    android:fontFamily="@font/montserratsemibold"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <!--                <LinearLayout-->
<!--                    android:layout_marginHorizontal="5dp"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    android:gravity="center_vertical"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="horizontal">-->
<!--                    <ImageView-->
<!--                        android:src="@drawable/baseline_star_border_24"-->
<!--                        android:layout_width="10dp"-->
<!--                        android:layout_height="10dp"/>-->
<!--                    <TextView-->
<!--                        android:id="@+id/rating"-->
<!--                        android:layout_gravity="bottom"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="4.5"-->
<!--                        android:fontFamily="@font/montserratregular"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="14dp"/>-->
<!--                </LinearLayout>-->
            </LinearLayout>
            <Button
                android:id="@+id/trackDriverButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track Driver"
                android:textColor="@color/white"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
