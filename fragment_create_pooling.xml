<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePoolingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:background="@color/primary">
            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/testTap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Create Pooling"
                android:textColor="@color/white"
                android:fontFamily="@font/montserratbold"
                android:textSize="22sp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/lightGray"/>
    </LinearLayout>
    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:indeterminateTint="@color/primary"
        android:layout_gravity="center"
        android:id="@+id/viewProgressBar"/>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/registerAsDriverView"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:gravity="center_horizontal"
        android:background="@drawable/white_bg"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginVertical="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/driver" />
        <TextView
            android:background="@color/white"
            android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:textColorHint="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="This feature is exclusively for drivers. Please register as a driver to access it."
            android:textAlignment="center"
            android:fontFamily="@font/montserratsemibold"
            android:textSize="12dp"/>
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Register As Driver"
            android:background="@drawable/bottom_curve_btn_bg"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:fontFamily="@font/montserratbold"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:id="@+id/registerAsDriverBtn"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/createPoolingView"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:background="@drawable/white_bg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/green_dot_bg"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
            <TextView
                android:fontFamily="@font/montserratsemibold"
                android:id="@+id/leavingFromTxt"
                android:hint="Leaving From"
                android:background="@color/white"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="bottom"
                android:textColorHint="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/red_dot_bg"
                android:layout_width="10dp"
                android:layout_height="10dp"/>
            <TextView
                android:fontFamily="@font/montserratsemibold"
                android:id="@+id/goingToTxt"
                android:hint="Going To"
                android:background="@color/white"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="bottom"
                android:textColorHint="@color/gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnSelectDate"
            android:gravity="center_vertical"
            android:layout_marginVertical="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/baseline_calendar_month_24"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:fontFamily="@font/montserratsemibold"
                android:id="@+id/tvSelectedDate"
                android:layout_marginHorizontal="10dp"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Date And Time"
                android:textColor="@color/black"
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:text="â‚¹"
                android:textColor="@color/black"
                android:fontFamily="@font/montserratsemibold"
                android:layout_width="20dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"/>
            <EditText
                android:textColorHint="@color/gray"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Price"
                android:id="@+id/priceEditTxt"
                android:inputType="phone"
                android:paddingVertical="10dp"
                android:background="@drawable/white_bg"
                android:fontFamily="@font/montserratbold"
                android:textColor="@color/black"
                android:textSize="14dp"/>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ProgressBar
                android:indeterminateTint="@color/primary"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/progressBar"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/createBtn"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="Create"
                android:fontFamily="@font/montserratsemibold"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:minHeight="50dp"
                android:background="@drawable/bottom_curve_btn_bg"
                android:backgroundTint="@color/primary"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>