<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/locationDetailsContainer"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:background="@android:color/white"    android:elevation="4dp"    android:orientation="vertical">    <TextView        android:id="@+id/addressText"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="8dp"        android:maxLines="2"        android:fontFamily="@font/montserratmedium"        android:padding="8dp"        android:ellipsize="end"        android:text="Address: Not Available"        android:textColor="@android:color/black"        android:textSize="16sp" />    <View        android:layout_width="match_parent"        android:layout_height="0.4dp"        android:background="@color/black" /></LinearLayout>